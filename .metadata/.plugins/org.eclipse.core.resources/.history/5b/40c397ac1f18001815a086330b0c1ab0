import java.awt.Font;
import java.awt.GraphicsEnvironment;

import javax.swing.JCheckBox;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class Base {
	private static final int W = 800;
	private static final int H = 600;
	private static final int X = 100;
	private static final int Y = 100;
	
	private static JFrame frame = new JFrame();
	
	private static JCheckBox bold = new JCheckBox();
	private static JCheckBox italic = new JCheckBox();
	private static JCheckBox underline = new JCheckBox();
	
	private static JComboBox fonts_combo = new JComboBox();
	
	private static JPanel panel;
	
	public static void init() {
		frame.setTitle("Font Changer");
		frame.setBounds(X, Y, W, H);
		frame.setVisible(true);
	}
	public static void addComponenents() {
		bold.setLabel("Bold");
		italic.setLabel("Italic");
		underline.setLabel("Underline");
		String fonts[] = GraphicsEnvironment.getLocalGraphicsEnvironment().getAvailableFontFamilyNames(); // from https://alvinalexander.com/blog/post/jfc-swing/swing-faq-list-fonts-current-platform
		for (String font: fonts) {
			fonts_combo.addItem(font);
		}
	}
}
